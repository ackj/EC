<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="克拉家园便利店"
        android:textColor="@color/base_black"
        android:textSize="@dimen/H3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="送货上门"
        android:textSize="@dimen/H5"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:text="已取消"
        android:textSize="@dimen/H3"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_white"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_amount"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <LinearLayout
        android:id="@+id/ll_amount"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共5件" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_arrow_right_gray_24dp" />
    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/base_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />

    <TextView
        android:id="@+id/anchor_1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:text="实付："
        android:textColor="@color/base_gray"
        android:textSize="@dimen/H3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="￥ 5.00"
        android:textColor="@color/red"
        android:textSize="@dimen/H3"
        app:layout_constraintLeft_toRightOf="@id/anchor_1"
        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_bg_round_rectangle_gray"
        android:text="取消订单"
        android:textColor="@color/base_gray"
        android:textSize="@dimen/H3"
        app:layout_constraintBaseline_toBaselineOf="@id/anchor_1"
        app:layout_constraintRight_toLeftOf="@+id/btn_reorder"
        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <Button
        android:id="@+id/btn_reorder"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_bg_shadow_orange"
        android:text="重新下单"
        android:textColor="@color/white"
        android:textSize="@dimen/H3"
        app:layout_constraintBaseline_toBaselineOf="@id/anchor_1"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/default_white"
        app:layout_constraintTop_toBottomOf="@id/anchor_1" />


</android.support.constraint.ConstraintLayout>